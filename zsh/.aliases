# colors
function colors() {
  for i in {0..255}; do
    printf "\e[38;5;${i}m%3d " $i
    # Print newline every 16 colors to create table rows
    (( (i + 1) % 16 == 0 )) && echo
  done
  echo -e "\e[0m" # Reset color
}
