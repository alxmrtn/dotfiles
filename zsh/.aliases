# env
function cenv() {
  env -0 |\
    sort -z |\
    tr '\0' '\n' |\
    sed -E $'s/^([^=]+)(=)(.*)/\033[33m\\1\033[0m\033[37m\\2\033[0m\033[32m\\3\033[0m/'
}
alias lenv="/usr/bin/env"
alias env=cenv

