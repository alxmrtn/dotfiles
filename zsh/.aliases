# cat
function smart_cat() {
  local last_arg="${@: -1}"

  if [[ -f "$last_arg" && "$last_arg" =~ \.(md|markdown|mdown|mkd)$ ]]; then
    glow --width=$COLUMNS --style=${CONFIG_ROOT}/glow/almartin.json "$@"
  else
    bat "$@"
  fi
}
alias lcat="/bin/cat"
alias cat="smart_cat"
alias c="cat"

